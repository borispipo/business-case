{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./public/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false,
    "paths": {
      /** web drivers paths*/
      "$wdriver/*": [
        "client/web-driver/*"
      ],
      "$wd/*" : [
        "client/web-driver/app/*"
      ],
      "$wdcomponents/*" : [
        "client/web-driver/components*"
      ],
      "$wdutils/*" : [
        "client/web-driver/utils/*"
      ],
      
      /**
        web tacker paths
      */
      "$wtracker/*": [
        "client/web-tracker/*"
      ],
      "$wt/*" : [
        "client/web-tracker/app/*"
      ],
      "$wtcomponents/*" : [
        "client/web-tracker/components*"
      ],
      "$wtutils/*" : [
        "client/web-tracker/utils/*"
      ],
      
      /*
        web admin modules
      **/
      "$wadmin/*": [
        "client/web-tracker/*"
      ],
      "$wa/*" : [
        "client/web-tracker/app/*"
      ],
      "$wacomponents/*" : [
        "client/web-tracker/components*"
      ],
      "$wautils/*" : [
        "client/web-tracker/utils/*"
      ],
      
      /**
        shared and common modules paths
      **/
      "$common/*" : [
        "client/common/*"
      ],
      "$utils/*" : [
        "client/common/utils*"
      ],
      
      /**public paths*/
      "$public/*" : [
        "public/*"
      ],
      "$assets/*" : [
        "public/assets/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "**/*.d.ts"
  ],
  "files" : ["main.ts"]
}