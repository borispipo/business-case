{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./public/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false,
    "paths": {
      /** web drivers paths*/
      "$driver/*": [
        "client/web-driver/*"
      ],
      "$dsrc/*" : [
        "client/web-driver/src/*"
      ],
      "$dapp/*" : [
        "client/web-driver/src/app/*"
      ],
      "$dcomponents/*" : [
        "client/web-driver/src/components*"
      ],
      "$dutils/*" : [
        "client/web-driver/src/utils/*"
      ],
      
      /**
        web tacker paths
      */
      "$tracker/*": [
        "client/web-tracker/*"
      ],
      "$tapp/*" : [
        "client/web-tracker/src/app/*"
      ],
      "$tcomponents/*" : [
        "client/web-tracker/src/components/*"
      ],
      "$tutils/*" : [
        "client/web-tracker/src/utils/*"
      ],
      
      /*
        web admin modules
      **/
      "$admin/*": [
        "client/web-admin/*"
      ],
      "$aapp/*" : [
        "client/web-admin/src/app/*"
      ],
      "$acomponents/*" : [
        "client/web-admin/src/components/*"
      ],
      "$autils/*" : [
        "client/web-admin/src/utils/*"
      ],
      
      "$environment" : [
        "client/shared/environments/environment"
      ],
      /**
        shared modules paths
      **/
      "$shared/*" : [
        "client/shared/*"
      ],
      "$utils/*" : [
        "client/shared/utils/*"
      ],
      "$stypes/*" : ["client/shared/types/*"],
      "$stypes" : ["client/shared/types/index"],
      "$scomponents/*" : ["client/shared/components/*"],
      "$socket/*" : ["client/shared/socket/*"],
      
      "$fetch" : ["client/shared/fetch/index.ts"],
      "$notify" : ["client/shared/notify/index.ts"],
      /**public paths*/
      "$dist/*" : [
        "dist/*"
      ],
      "$assets/*" : [
        "dist/assets/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "*.d.ts",
    "client/**/*",
  ],
}